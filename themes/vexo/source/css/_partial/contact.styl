#contact-form {
  text-align: center;
}

.contact-input {
  display: block;
  color: color-black;
  background-color: color-white;
  border: 1px solid color-primary;
  padding: 0.5em;
  margin: 0 auto;
  border-radius: 10px;
  font-size: 1em;
}

.contact-button {
  color: color-white;
  background-color: color-primary;
  border: 1px solid color-primary;
  padding: 0.3em 0.5em;
  border-radius: 10px;
  font-size: 1em;
  transition: 0.4s;
}

.contact-button:hover {
  color: color-primary;
  background-color: color-white;
  border: 1px solid color-primary;
}