.card-title {
  text-align: center;
}

.card-wrapper {
  flex-wrap: wrap;
  justify-content: center;
}

.card-name {
  font-size: 1em;
}

.card {
  display: block;

  width: 200px;
  color: color-white;
  background: color-primary;
  border: 1px solid color-primary ;
  margin: 10px;
  padding: 10px;
  border-radius: 10px;

  transition: 0.4s;
}

.card:hover {
  color: color-primary;
  background: color-white;
}