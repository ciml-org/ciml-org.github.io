<!-- Async Script Loader -->
<script>
  function asyncLoad(url, callback) {
    var d = document,
        t = "script",
        o = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
    o.src = url;
    if (callback) {
      o.addEventListener("load", function (e) {
        callback(null, e);
      }, false);
    }
    s.parentNode.insertBefore(o, s);
  }
</script>

<!-- FastClick Library -->
<script>
  asyncLoad("//cdnjs.cloudflare.com/ajax/libs/fastclick/1.0.6/fastclick.min.js", function () {
    if (typeof FastClick !== 'undefined') {
      FastClick.attach(document.body);
    }
  });
</script>

<!-- Highlight.js for Code Highlighting -->
<script>
  var hasLine = "{{ site.highlight.line_number }}";
  asyncLoad("//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js", function () {
    document.querySelectorAll("figure pre").forEach(function(block) {
      var figure = block.closest("figure");
      if (hasLine === "false" && figure.querySelector(".gutter")) {
        figure.querySelector(".gutter").style.display = "none";
      }
      hljs.configure({ useBR: true });
      var langClass = figure.className.split(" ")[1] || "code";
      var codeHtml = block.innerHTML;
      var codeTag = document.createElement("code");
      codeTag.className = langClass;
      codeTag.innerHTML = codeHtml;
      block.className = "";
      block.innerHTML = "";
      block.appendChild(codeTag);
      figure.setAttribute("data-lang", langClass.toUpperCase());
      hljs.highlightBlock(block);
    });
  });
</script>

